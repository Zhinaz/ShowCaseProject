<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="molbak.showcaseproject.MovieActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_middle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" >

        <ImageView
            android:id="@+id/img_background"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@color/cardview_dark_background"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="89dp" />

        <TextView
            android:id="@+id/txt_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Score"
            android:textColor="@color/colorOrange"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/img_background"
            app:layout_constraintTop_toBottomOf="@+id/layout_middle"
            tools:text="Score"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/txt_score_text"
            app:layout_constraintTop_toBottomOf="@+id/layout_middle"
            tools:text="ScoreAvg"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/txt_votes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Votes"
            android:textColor="@color/colorOrange"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/img_background"
            app:layout_constraintTop_toBottomOf="@+id/txt_score"
            tools:text="Score"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/txt_score_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/txt_votes_text"
            app:layout_constraintTop_toBottomOf="@+id/txt_score"
            tools:text="ScoreVotes"
            android:layout_marginStart="8dp" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_middle"
        tools:text="Description"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
